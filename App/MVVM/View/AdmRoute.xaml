<UserControl x:Class="App.MVVM.View.AdmRoute"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:App.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    

    <UserControl.Resources>
        <ResourceDictionary Source="../../Theme/ScrollTheme.xaml"></ResourceDictionary>
    </UserControl.Resources>
    
    <Grid>

        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>

            </Grid.RowDefinitions>

            <StackPanel Orientation="Vertical">
                <TextBlock Text="ID Route"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Foreground="White"
                       FontSize="20"/>

                <ComboBox x:Name="comboBoxId" SelectionChanged="comboBoxId_SelectionChanged"></ComboBox>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel  Grid.Row="0" >
                        <TextBlock Text="Nombre de la ruta"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Foreground="White"
                       FontSize="13"/>
                        <TextBox x:Name="nameText"/>
                    </StackPanel>

                    <StackPanel  Grid.Row="1" >
                        <TextBlock Text="Categoria de la ruta"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Foreground="White"
                       FontSize="13"/>
                        <TextBox x:Name="catText"/>
                    </StackPanel>

                    <StackPanel  Grid.Row="2" >
                        <TextBlock Text="Distancia de la Ruta"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Foreground="White"
                       FontSize="13"/>
                        <TextBox x:Name="distText"/>
                    </StackPanel>
                    
                    <StackPanel  Grid.Row="3" >
                        <TextBlock Text="Dificultad de la Ruta"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Foreground="White"
                       FontSize="13"/>
                        <TextBox x:Name="diffText"/>
                    </StackPanel>

                    <StackPanel Grid.Row="4" Cursor="Hand">
                        <TextBlock Text="Imagen de la Ruta"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Foreground="White"
                       FontSize="13"/>

                        <Button x:Name="btnImage"
                        HorizontalAlignment="Left"
                        BorderThickness="0"
                        Content="Modificar Imagen"
                        Foreground="White"
                        FontSize="10"
                        FontFamily="Montserrat"
                        Cursor="Hand"
                        Grid.Column="1"
                        Margin="10,5,0,0" Click="btnImage_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" 
                                    Value="#358F80"/>
                                    <!--Esto es para cambiar el color cuando pasa el raton por encima-->
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" 
                                         Value="True">
                                            <Setter Property="Background" 
                                            Value="#278BEF"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>

                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Width="98" Height="18"
                                    CornerRadius="10"
                                    Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>

                        </Button>
                        

                    </StackPanel>

                    <StackPanel Grid.Row="5" Orientation="Horizontal">
                        <Button x:Name="btnSave"
                        HorizontalAlignment="Left"
                        BorderThickness="0"
                        Content="Guardar"
                        Foreground="White"
                        FontSize="10"
                        FontFamily="Montserrat"
                        Cursor="Hand"
                        Grid.Column="1"
                        Margin="10,120,0,0" Click="btnSave_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" 
                                    Value="#358F80"/>
                                    <!--Esto es para cambiar el color cuando pasa el raton por encima-->
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" 
                                         Value="True">
                                            <Setter Property="Background" 
                                            Value="#278BEF"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>

                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Width="78" Height="18"
                                    CornerRadius="10"
                                    Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>

                        </Button>


                        <Button x:Name="btnDelete"
                        HorizontalAlignment="Left"
                        BorderThickness="0"
                        Content="Eliminar Ruta"
                        Foreground="White"
                        FontSize="10"
                        FontFamily="Montserrat"
                        Cursor="Hand"
                        Grid.Column="1"
                        Margin="10,120,0,0" Click="btnDelete_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" 
                                    Value="#9d0208"/>
                                    <!--Esto es para cambiar el color cuando pasa el raton por encima-->
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" 
                                         Value="True">
                                            <Setter Property="Background" 
                                            Value="#d00000"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>

                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Width="78" Height="18"
                                    CornerRadius="10"
                                    Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>

                        </Button>
                    </StackPanel>

                </Grid>
                
            </StackPanel>

            <ScrollViewer Grid.Column="1">
                <StackPanel Orientation="Vertical" x:Name="stackPanel">




                </StackPanel>
            </ScrollViewer>


        </Grid>

    </Grid>
</UserControl>
