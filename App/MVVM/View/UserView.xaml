<UserControl x:Class="App.MVVM.View.UserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:App.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="333*"/>
            <ColumnDefinition Width="200*"/>
            <ColumnDefinition Width="267*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Image Width="50"
                   Source="../../Images/user.png"
                   x:Name="logoUser"
                   VerticalAlignment="Top"/>
            <TextBlock Text="User"
                       x:Name="UsernameTxt"
                       Foreground="White"
                       FontSize="25"
                       FontWeight="Medium"
                       Margin="10,15,0,0"
                       FontFamily="Fonts/#Ubuntu-Regular"/>

            <TextBlock Text="Followers:" 
                       x:Name="FollowersTxt"
                       Foreground="White"
                       FontSize="15"
                       FontWeight="Medium"
                       Margin="20,22,0,0"
                       FontFamily="Fonts/#Ubuntu-Regular"/>
            <TextBlock Text="0" 
                       x:Name="NFollowers"
                       Foreground="White"
                       FontSize="15"
                       FontWeight="Medium"
                       Margin="5,23,0,0"
                       FontFamily="Fonts/#Ubuntu-Regular"/>

            <TextBlock Text="Following:" 
                       x:Name="FollowingTxt"
                       Foreground="White"
                       FontSize="15"
                       FontWeight="Medium"
                       Margin="20,22,0,0"
                       FontFamily="Fonts/#Ubuntu-Regular"/>
            
            <TextBlock Text="0" 
                       x:Name="NFollowing"
                       Foreground="White"
                       FontSize="15"
                       FontWeight="Medium"
                       Margin="5,23,0,0"
                       FontFamily="Fonts/#Ubuntu-Regular"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.ColumnSpan="3">
            <TextBlock Text="My Routes"
                       Foreground="White"
                       FontSize="25"
                       FontWeight="Medium"
                       Margin="10,15,0,0"
                       FontFamily="Fonts/#Ubuntu-Regular"/>

            <StackPanel Orientation="Horizontal" x:Name="routes">

                <StackPanel Orientation="Vertical" Margin="15">

                    <TextBlock Text="Ruta"
                       Foreground="White"
                       FontSize="25"
                       FontWeight="Medium"
                       HorizontalAlignment="Center"
                       FontFamily="Fonts/#Ubuntu-Regular"/>

                    <Image HorizontalAlignment="Center" Width="80" Source="../../Images/ruta.jpg"/>

                </StackPanel>



            </StackPanel>

        </StackPanel>

    </Grid>
</UserControl>
